{
  "name": "@awareness481/get-filename",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index-common.cjs"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "engineStrict": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "format:eslint": "eslint --fix",
    "format:prettier": "prettier --write src",
    "format": "npm run format:eslint && npm run format:prettier",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "pub": "npx swc ./src/index.ts -o ./dist/index.mjs -C minify=true && npx swc ./src/index.ts -o ./dist/index-common.cjs -C module.type=commonjs,minify && tsc ./src/index.ts --outFile ./dist/index.d.ts --declaration --emitDeclarationOnly --esModuleInterop && tsc ./src/index.ts --outFile ./dist/index-common.d.ts --declaration --emitDeclarationOnly --esModuleInterop --module commonjs",
    "prepublishOnly": "pinst --disable && yarn pub",
    "test": "jest --coverage",
    "test:dev": "jest -w",
    "test:build": "jest dist",
    "build": "tsc && npm run test:build"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run format"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.3.2",
    "@swc/cli": "^0.1.55",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "version": "0.2.0"
}
